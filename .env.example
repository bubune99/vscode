# Mission Control Database Configuration
# Copy this file to .env and configure your database settings

# =================================================================
# DATABASE MODE
# =================================================================
# Options: 'sqlite' | 'postgresql'
# sqlite: Per-workspace file-based database (default)
# postgresql: Shared database across all projects
DATABASE_MODE=sqlite

# =================================================================
# SQLITE CONFIGURATION (Default Mode)
# =================================================================
# SQLite database is automatically created at:
# <workspace>/.mission-control/database.sqlite
# No additional configuration needed for SQLite mode

# =================================================================
# POSTGRESQL CONFIGURATION (MLP Global Database)
# =================================================================
# Connection string format:
# postgresql://username:password@host:port/database

# MLP Global Database (for multi-project coordination)
MLP_DATABASE_URL=postgresql://mlp_user:mlp_secure_2024@localhost:5432/mlp_global

# Alternative connection parameters (if not using connection string)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=mlp_global
# POSTGRES_USER=mlp_user
# POSTGRES_PASSWORD=mlp_secure_2024

# =================================================================
# MEMORY-AGENT INTEGRATION (Optional)
# =================================================================
# Connect to Memory-Agent for code pattern analysis
MEMORY_AGENT_ENABLED=false
MEMORY_AGENT_URL=postgresql://localhost:5432/cascade_memory

# =================================================================
# LOGGING
# =================================================================
# Log level: 'debug' | 'info' | 'warn' | 'error'
LOG_LEVEL=info

# Log database queries (useful for debugging)
LOG_DATABASE_QUERIES=false
